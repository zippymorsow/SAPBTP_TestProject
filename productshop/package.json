{
  "name": "productshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xsenv": "^6.1.0",
    "@sap/xssec": "^4.12.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.1.2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-productshop": "cds watch --open ns.productshop/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-products": "cds watch --open ns.products/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/productshop",
    "app/products"
  ],
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "john": {
              "roles": [
                "productmanager"
              ]
            },
            "mario": {
              "roles": [
                "productmanager"
              ],
              "password": "initial"
            },
            "henry": {
              "roles": [
                "productdeveloper"
              ]
            }
          }
        }
      }
    },
    "db": {
      "kind": "sqlite",
      "credentials": {
        "url": "db.sqlite"
      }
    }
  }
}
